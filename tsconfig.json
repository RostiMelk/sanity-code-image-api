{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
