{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
